@model Message.Sms.Web.Repositories.Entity.Users
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content user">
    <div class="row">
        <div class="col-9 col-xl-12 d-none d-md-block">
            <div class="box card-box mb-20">
                <div class="icon-box bg-color-1" data-toggle="modal" data-target="#rechargeBalance_modal">
                    <div class="icon bg-icon-1">
                        <i class='bx bxs-briefcase'></i>
                    </div>
                    <div class="content">
                        <h5 class="title-box fs-15 mt-2">Trip Balance</h5>
                        <div class="themesflat-counter fs-14 font-wb color-1">
                            <spa class="number" data-from="0" data-to="1225" data-speed="2500" data-inviewport="yes">￥ @Model.Balance</spa>
                        </div>
                    </div>
                </div>
                @if (Model.IsAdmin)
                {
                    <div class="icon-box bg-color-2">
                        <div class="icon bg-icon-2">
                            <i class='bx bx-task'></i>
                        </div>
                        <div class="content click-c">
                            <h5 class="title-box fs-15 mt-2">Running Task</h5>
                            <div class="themesflat-counter fs-14 font-wb color-2">
                                <span class="number" data-from="0" data-to="309" data-speed="2500" data-inviewport="yes">@ViewBag.RunningTask +</span>
                            </div>
                        </div>

                    </div>
                    <div class="icon-box bg-color-3">
                        <div class="icon bg-icon-3">
                            <i class='bx bx-block'></i>
                        </div>
                        <div class="content click-c">
                            <h5 class="title-box fs-15 mt-2">Failed</h5>
                            <div class="themesflat-counter fs-14 font-wb color-3">
                                <span class="number" data-from="0" data-to="309" data-speed="2500" data-inviewport="yes">@ViewBag.Failed +</span>
                            </div>
                        </div>

                    </div>
                }
                else
                {
                    <div class="icon-box bg-color-2" onclick="window.location.href='/project/index'">
                        <div class="icon bg-icon-2">
                            <i class='bx bx-devices'></i>
                        </div>
                        <div class="content click-c">
                            <h5 class="title-box fs-15 mt-2">Receive Code</h5>
                            <div class="themesflat-counter fs-14 font-wb color-2">
                                <span class="number" data-from="0" data-to="309" data-speed="2500" data-inviewport="yes">@ViewBag.RunningTask +</span>
                            </div>
                        </div>

                    </div>
                    <div class="icon-box bg-color-3" onclick="window.location.href='/channel/phoneNumberLogs'">
                        <div class="icon bg-icon-3">
                            <i class='bx bx-block'></i>
                        </div>
                        <div class="content click-c">
                            <h5 class="title-box fs-15 mt-2">Used Mobile</h5>
                            <div class="themesflat-counter fs-14 font-wb color-3">
                                <span class="number" data-from="0" data-to="309" data-speed="2500" data-inviewport="yes">@ViewBag.Failed +</span>
                            </div>
                        </div>

                    </div>
                }
                
                @* <div class="icon-box bg-color-5">
                    <div class="icon bg-icon-5">
                        <i class='bx bx-task color-white'></i>
                    </div>
                    <div class="content click-c">
